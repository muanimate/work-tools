{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "./dist/types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    // "types": ["jest", "@jest/globals"]
  },
  "include": ["src/**/*", "src/types/**/*"]
}